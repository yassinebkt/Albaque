@model Albaque.ViewModels.TacheInformationViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tache</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.tache.nom, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tache.nom)
                @Html.ValidationMessageFor(model => model.tache.nom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tache.description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tache.description)
                @Html.ValidationMessageFor(model => model.tache.description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tache.charge, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tache.charge)
                @Html.ValidationMessageFor(model => model.tache.charge)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.tache.categorie, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.tache.categorie, new SelectList(Model.categories, "Id", "nom"), "Choix du categorie", new { @class = "control-label col-md-2" })
                @*@Html.ValidationMessageFor(model => model.projet.client)*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.tache.technologie, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.tache.technologie, new SelectList(Model.technologies, "Id", "nom"), "Choix du techno", new { @class = "control-label col-md-2" })
                @*@Html.ValidationMessageFor(model => model.projet.client)*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.tache.complexite, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.tache.complexite, new SelectList(Model.complexites, "Id", "nom"), "Choix du complexite", new { @class = "control-label col-md-2" })
                @*@Html.ValidationMessageFor(model => model.projet.client)*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


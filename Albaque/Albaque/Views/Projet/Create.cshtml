@model Albaque.ViewModels.ProjetClientViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Projet</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.projet.Nom, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.projet.Nom)
                @Html.ValidationMessageFor(model => model.projet.Nom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.projet.Duree, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.projet.Duree)
                @Html.ValidationMessageFor(model => model.projet.Duree)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.projet.Delai, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.projet.Delai)
                @Html.ValidationMessageFor(model => model.projet.Delai)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.projet.Date_Debut, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.projet.Date_Debut)
                @Html.ValidationMessageFor(model => model.projet.Date_Debut)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.projet.Date_Fin, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.projet.Date_Fin)
                @Html.ValidationMessageFor(model => model.projet.Date_Fin)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.projet.client.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.projet.client.Id, new SelectList(Model.clients, "Id", "nom"), "Choix du client", new { @class = "control-label col-md-2" })
                @*@Html.ValidationMessageFor(model => model.projet.client)*@
            </div>
        </div>
        @Html.HiddenFor(m => m.projet.Id)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
